<% content_for :title, "Se connecter - BugHound" %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', system-ui, sans-serif;
    background: #f8f9fa;
    min-height: 100vh;
    padding: 2rem;
  }

  /* Container principal centré */
  .auth-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: calc(100vh - 4rem);
  }

  .auth-container {
    background: white;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.1);
    padding: 3rem;
    width: 100%;
    max-width: 400px;
    border: 1px solid #e1e5e9;
  }

  .logo {
    text-align: center;
    margin-bottom: 2rem;
  }

  .logo h1 {
    font-size: 2rem;
    font-weight: 700;
    color: #2d3748;
    margin-bottom: 0.5rem;
  }

  .logo span {
    font-size: 2.5rem;
  }

  .logo-img {
  width: 60px;  /* Ajuste selon ton logo */
  height: 60px;
  margin-bottom: 1rem;
  object-fit: contain;
}

  .form-title {
    text-align: center;
    font-size: 1.8rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
  }

  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 0.875rem;
    border: 1px solid #d1d5db;
    border-radius: 8px;
    font-size: 1rem;
    transition: all 0.2s ease;
    background: #f9fafb;
  }

  input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

.btn-primary {
  width: 100%;
  padding: 1rem;  /* Changé de 0.875rem à 1rem */
  background: linear-gradient(135deg, #635bff, #4b45d1);
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  margin-top: 1rem;
  text-align: center;  /* Ajouté */
  display: block;      /* Ajouté */
}

  .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 4px 20px rgba(99, 91, 255, 0.3);
  }

.auth-links {
  text-align: center;
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid #e5e7eb;
}

.auth-links p {
  margin: 0 0 1rem 0;
  line-height: 1.5;
}

.auth-links a {
  color: #667eea;
  text-decoration: none;
  font-weight: 500;
  font-size: 1rem;
  display: inline-block;
  padding: 0.25rem 0;
}

.auth-links a:hover {
  text-decoration: underline;
}

.auth-links p:last-child {
  margin-bottom: 0;
}

  .remember-me {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #6b7280;
  }

  /* Styles pour les alertes Rails */
  .alert {
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-radius: 8px;
    font-weight: 500;
  }

  .alert-success {
    background: #d1fae5;
    color: #065f46;
    border: 1px solid #a7f3d0;
  }

  .alert-danger {
    background: #fef2f2;
    color: #dc2626;
    border: 1px solid #fecaca;
  }

  /* Uniformiser inputs, boutons et alertes */
input[type="email"],
input[type="password"],
.btn-primary,
.alert {
  width: 100%;             /* même largeur */
  box-sizing: border-box;  /* inclure padding + border dans le calcul */
  border-radius: 8px;      /* arrondis cohérents */
}

/* Harmoniser padding */
input[type="email"],
input[type="password"] {
  padding: 1rem;
  background: #f9fafb;
  font-size: 1rem;
}

.alert {
  padding: 1rem;
  font-size: 0.95rem;
  text-align: center;   /* centrer le texte dans l’encart */
}

</style>

<div class="auth-wrapper">
  <div class="auth-container">
    <div class="logo">
      <%= image_tag "logo.png", alt: "BugHound", class: "logo-img" %>
      <h1>BugHound</h1>
    </div>

    <h2 class="form-title">Se connecter</h2>

    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "votre@email.com" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Votre mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <label class="remember-me">
            <%= f.check_box :remember_me %>
            Se souvenir de moi
          </label>
        </div>
      <% end %>

      <%= f.submit "Se connecter", class: "btn-primary" %>
    <% end %>

    <div class="auth-links">
      <p>Pas encore de compte ? <%= link_to "Créer un compte", new_registration_path(resource_name) %></p>
      <% if devise_mapping.recoverable? %>
        <p style="margin-top: 1rem;"><%= link_to "Mot de passe oublié ?", new_password_path(resource_name) %></p>
      <% end %>
    </div>
  </div>
</div>