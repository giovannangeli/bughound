    <!-- Score (hero + d√©tails) -->
    <% if @analysis.ai_provider.in?(["openai","claude","smells"]) && @score.present? %>
      <%
        score       = (@score || 0).to_f
        ring_r      = 50
        ring_c      = (2 * Math::PI * ring_r)
        ring_offset = ring_c * (1 - score / 10.0)
        tier = case score
               when 8..10 then 'good'
               when 6..7  then 'ok'
