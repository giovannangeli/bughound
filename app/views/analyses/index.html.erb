<div class="analyses-container">
  <div class="analyses-header">
    <h1 class="analyses-title">Historique des analyses</h1>
    <p class="analyses-subtitle">Retrouvez toutes vos analyses de code pr√©c√©dentes</p>
  </div>

  <div class="analyses-card">
    <% if @languages.present? %>
      <div class="filters-section">
        <h3 class="filters-title">Filtres</h3>
        <div class="filters-grid">
          <div class="filter-group">
            <label class="filter-label">Langage</label>
            <div class="select-wrapper">
              <select class="language-select" onchange="updateFilters('language', this.value)">
                <option value="">Tous les langages</option>
                <% @languages.each do |lang| %>
                  <option value="<%= lang %>" <%= 'selected' if params[:language] == lang %>><%= lang %></option>
                <% end %>
              </select>
              <svg class="select-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
          
          <div class="filter-group">
            <label class="filter-label">Type d'analyse</label>
            <div class="select-wrapper">
              <select class="language-select" onchange="updateFilters('ai_provider', this.value)">
                <option value="">Tous les types</option>
                <option value="openai" <%= 'selected' if params[:ai_provider] == 'openai' %>>Analyse rapide</option>
                <option value="claude" <%= 'selected' if params[:ai_provider] == 'claude' %>>Analyse expert</option>
                <option value="tests" <%= 'selected' if params[:ai_provider] == 'tests' %>>Tests automatiques</option>
                <option value="smells" <%= 'selected' if params[:ai_provider] == 'smells' %>>Code smells</option>
                <option value="improve" <%= 'selected' if params[:ai_provider] == 'improve' %>>Refactoring</option>
              </select>
              <svg class="select-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="content-section">
      <% if @analyses.empty? %>
        <div class="empty-state">
          <div class="empty-icon">üîç</div>
          <h3 class="empty-title">Aucune analyse trouv√©e</h3>
          <p class="empty-description">
            <% if params[:language].present? %>
              Aucune analyse en <%= params[:language] %> pour le moment.
            <% else %>
              Commencez par cr√©er votre premi√®re analyse de code !
            <% end %>
          </p>
          <%= link_to new_analysis_path, class: "btn-primary" do %>
            <i class="fas fa-plus"></i>
            <span>Nouvelle analyse</span>
          <% end %>
        </div>
      <% else %>
