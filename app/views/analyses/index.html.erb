                    <%= l(analysis.created_at, format: :short) %>
                  </td>
                  <td class="action-cell">
                    <div class="dropdown-container" data-dropdown>
                      <button class="btn-dropdown" data-dropdown-trigger>
                        <i class="fas fa-eye"></i>
                        <span>Voir</span>
                        <i class="fas fa-chevron-down dropdown-chevron"></i>
                      </button>
                      <div class="dropdown-menu" data-dropdown-menu>
                        <%= link_to analysis_path(analysis), class: "dropdown-item dropdown-item-primary" do %>
                          <i class="fas fa-eye"></i>
                          <span>Voir l'analyse</span>
                        <% end %>
<%= link_to duplicate_analysis_path(analysis), method: :post, class: "dropdown-item", data: { turbo_method: :post } do %>
  <i class="fas fa-copy"></i>
  <span>Dupliquer</span>
<% end %>
