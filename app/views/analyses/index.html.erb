          <table class="analyses-table">
            <thead>
              <tr>
                <th>Titre</th>
                <th>Type</th>
                <th>Langage</th>
                <th>Score</th>
                <th>Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @analyses.each do |analysis| %>
                <tr class="table-row">
                  <td class="title-cell">
                    <div class="title-content">
                      <%= analysis.title.present? ? analysis.title : "Analyse sans titre" %>
                    </div>
                  </td>
                  <td class="type-cell">
                    <% type_info = analysis_type_info(analysis.ai_provider) %>
                    <span class="type-badge" style="background-color: <%= type_info[:color] %>15; color: <%= type_info[:color] %>; border: 1px solid <%= type_info[:color] %>30;">
                      <i class="fas <%= type_info[:icon] %>"></i>
                      <%= type_info[:name] %>
                    </span>
                  </td>
                  <td class="language-cell">
                    <span class="language-badge"><%= analysis.language %></span>
                  </td>
                  <td class="score-cell">
