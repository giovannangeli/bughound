<div class="analyses-container">
  <div class="analyses-header">
    <h1 class="analyses-title">Historique des analyses</h1>
    <p class="analyses-subtitle">Retrouvez toutes vos analyses de code pr√©c√©dentes</p>
  </div>

  <div class="analyses-card">
    <% if @languages.present? %>
      <div class="filters-section">
        <h3 class="filters-title">Filtrer par langage</h3>
        <div class="dropdown-container">
          <div class="select-wrapper">
            <select class="language-select" onchange="window.location.href=this.value">
              <option value="<%= analyses_path %>" <%= 'selected' if params[:language].blank? %>>Tous les langages</option>
              <% @languages.each do |lang| %>
                <option value="<%= analyses_path(language: lang) %>" <%= 'selected' if params[:language] == lang %>><%= lang %></option>
              <% end %>
            </select>
            <svg class="select-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </div>
      </div>
    <% end %>

    <div class="content-section">
      <% if @analyses.empty? %>
        <div class="empty-state">
          <div class="empty-icon">üîç</div>
          <h3 class="empty-title">Aucune analyse trouv√©e</h3>
          <p class="empty-description">
            <% if params[:language].present? %>
              Aucune analyse en <%= params[:language] %> pour le moment.
            <% else %>
              Commencez par cr√©er votre premi√®re analyse de code !
            <% end %>
          </p>
          <%= link_to new_analysis_path, class: "btn-primary" do %>
            <i class="fas fa-plus"></i>
            <span>Nouvelle analyse</span>
          <% end %>
        </div>
      <% else %>
        <div class="table-container">
          <table class="analyses-table">
            <thead>
              <tr>
                <th>Titre</th>
                <th>Langage</th>
                <th>Date</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @analyses.each do |analysis| %>
                <tr class="table-row">
                  <td class="title-cell">
                    <div class="title-content">
                      <%= analysis.title.present? ? analysis.title : "Analyse sans titre" %>
                    </div>
                  </td>
                  <td class="language-cell">
                    <span class="language-badge"><%= analysis.language %></span>
                  </td>
                  <td class="date-cell">
                    <%= l(analysis.created_at, format: :short) %>
                  </td>
                  <td class="action-cell">
                    <%= link_to analysis_path(analysis), class: "btn-view" do %>
                      <i class="fas fa-eye"></i>
                      <span>Voir</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="bottom-actions">
          <%= link_to new_analysis_path, class: "btn-primary" do %>
            <i class="fas fa-plus"></i>
            <span>Nouvelle analyse</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

