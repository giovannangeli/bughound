/* Code Editor Mockup */
.code-editor-mockup {
    background: white;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.1);
    border: 1px solid #e2e8f0;
    overflow: hidden;
    max-width: 400px;
    margin: 0 auto;
}

.editor-header {
    background: #f8f9fa;
    padding: 1rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    border-bottom: 1px solid #e2e8f0;
}

.editor-dots {
    display: flex;
    gap: 0.5rem;
}

.dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.dot.red { background: #ff5f57; }
.dot.yellow { background: #ffbd2e; }
.dot.green { background: #28ca42; }

.editor-title {
    font-size: 0.9rem;
    color: #6a7280;
    font-weight: 500;
}

.editor-content {
    padding: 1rem;
    background: #2d3748;
    color: #e2e8f0;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.9rem;
    position: relative;
}

.code-line {
    display: flex;
    align-items: center;
    padding: 0.25rem 0;
    position: relative;
}

.code-line.error {
    background: rgba(239, 68, 68, 0.1);
}

.line-number {
    color: #6a7280;
    margin-right: 1rem;
    min-width: 20px;
    font-size: 0.8rem;
}

.code-function {
    color: #60a5fa;
}

.error-indicator {
    position: absolute;
    right: 0.5rem;
    font-size: 0.8rem;
}

.ai-suggestion {
    background: #f0f9ff;
    padding: 1rem;
    border-top: 1px solid #e2e8f0;
}

.suggestion-header {
    font-size: 0.8rem;
    font-weight: 600;
    color: #2563eb;
    margin-bottom: 0.5rem;
}

.suggestion-text {
    font-size: 0.8rem;
    color: #6a7280;
}

/* Responsive pour le nouveau hero */
@media (max-width: 768px) {
    .hero-container {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
    }
    
    .hero-buttons {
        justify-content: center;
    }
}

        /* Features Section */
        .features {
            background: white;
            padding: 5rem 2rem 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 3rem;
            color: #2d3748;
        }

        .ai-modes {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .mode-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            border: 1px solid #e1e5e9;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .mode-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--accent-color);
        }

        .mode-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0,0,0,0.15);
        }

        .mode-card.openai { --accent-color: #10a37f; }
        .mode-card.claude { --accent-color: #ff6b35; }
        .mode-card.tests { --accent-color: #9b59b6; }
        .mode-card.improve { --accent-color: #e67e22; }
        .mode-card.smells { --accent-color: #e74c3c; }

        .mode-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            display: block;
        }

        .mode-title {
            font-size: 1.3rem;
            font-weight: 600;
            margin-bottom: 1rem;
            color: #2d3748;
        }

        .mode-description {
            color: #6a7280;
            line-height: 1.6;
            margin-bottom: 1rem;
        }

        .mode-tech {
            font-size: 0.9rem;
            color: var(--accent-color);
            font-weight: 500;
        }

        /* Demo Section */
        .demo {
            background: #ffffff;
            padding: 3rem 2rem;
            margin-top: 0;
        }

        .demo-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 3rem;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
        }

        .demo-content h2 {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            color: #2d3748;
        }

        .demo-features {
            list-style: none;
            margin-bottom: 2rem;
        }

        .demo-features li {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            font-size: 1.1rem;
        }

        .demo-features li::before {
            content: '✅';
            margin-right: 1rem;
            font-size: 1.2rem;
        }

        .demo-visual {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 8px 30px rgba(0,0,0,0.1);
            position: relative;
        }

        .demo-code {
            background: #2d3748;
            color: #e2e8f0;
            padding: 1.5rem;
            border-radius: 8px;
            font-family: 'Fira Code', monospace;
            margin-bottom: 1rem;
            overflow-x: auto;
        }

        .demo-loading {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: #f8f9fa;
            border-radius: 8px;
            margin-bottom: 1rem;
        }

        .demo-chick {
            font-size: 2rem;
            animation: bounce 1.5s ease-in-out infinite;
            margin-right: 1rem;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .demo-result {
            background: #d4edda;
            border-left: 4px solid #28a745;
            padding: 1rem;
            border-radius: 4px;
        }

        /* Stats Section */
        .stats {
            background: #ffffff;
            padding: 5rem 2rem;
            text-align: center;
        }

        .stats-container {
            background: linear-gradient(135deg, #4a5568 0%, #2d3748 25%, #1a202c 50%, #2c1810 75%, #553c1c 100%);
            color: white;
            padding: 4rem 3rem;
            border-radius: 20px;
            margin: 0 auto;
            max-width: 1400px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            max-width: 800px;
            margin: 0 auto;
        }

        .stat-item {
            padding: 1rem;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            display: block;
            margin-bottom: 0.5rem;
        }

        .stat-label {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* Footer */
        .footer {
            background: #ffffff;
            color: #2d3748;
            padding: 3rem 2rem 1rem;
            text-align: center;
        }

        .footer-content {
            max-width: 800px;
            margin: 0 auto;
        }

        .tech-stack {
            display: flex;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .tech-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
            color: #6a7280;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .nav-center,
            .nav-right {
                display: none;
            }

            .mobile-menu-btn {
                display: block;
                color: #2d3748;
            }

            .navbar {
                padding: 1rem;
            }

            .demo-container {
                grid-template-columns: 1fr;
                gap: 2rem;
            }

            .ai-modes {
                grid-template-columns: 1fr;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .hero-gradient {
                margin: 0 1rem;
                border-radius: 24px;
                padding: 4rem 2rem;
                max-width: 95%;
            }
        }

        /* User Dropdown */
        .user-dropdown {
            position: relative;
        }

       .user-btn {
    background: none;
    border: none;
    cursor: pointer;
    font-size: inherit;
}


.user-btn:hover {
  background: transparent !important;  /* pas de halo rectangulaire */
  color: inherit;
}



    .dropdown-menu {
    position: absolute;
    top: 100%;
    right: 0;
    background: white;
    border: 1px solid #e1e5e9;
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    min-width: 150px;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
    z-index: 1100;
    pointer-events: none; /* 🚫 clics désactivés par défaut */
}

.dropdown-menu.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto; /* ✅ clics activés quand ouvert */
}


    

        .dropdown-item {
            display: block;
            padding: 0.75rem 1rem;
            text-decoration: none;
            color: #2d3748;
            transition: background 0.2s ease;
        }

        .dropdown-item:hover {
            background: #f8f9fa;
        }

        .user-info {
            padding: 0.75rem 1rem;
            border-bottom: none;
        }

        .user-info strong {
            display: block;
            font-size: 0.9rem;
            color: #2d3748;
            margin-bottom: 0.25rem;
        }

        .user-info small {
            display: block;
            font-size: 0.8rem;
            color: #6a7280;
            opacity: 0.8;
        }

.user-avatar {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 40px;                   /* 40px = plus respirant, premium */
  height: 40px;
  border-radius: 9999px;         /* cercle parfait */
  background: radial-gradient(
    circle at 30% 30%,
    #6366F1 0%,
    #3B82F6 60%,
    #7C3AED 100%
  );
  color: #fff;
  font-weight: 600;              /* semibold : net mais pas massif */
  font-size: 14px;               /* un poil plus petit = initiales mieux centrées */
  letter-spacing: 0.2px;         /* micro-ajustement de lisibilité */
  border: 1px solid rgba(255,255,255,0.25); /* détache du fond clair de la navbar */
  box-shadow: 0 2px 8px rgba(0,0,0,0.08);   /* relief subtil */
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.user-avatar:hover {
  transform: translateY(-1px);
  box-shadow: 0 6px 16px rgba(0,0,0,0.12);
}

.user-avatar:focus-visible {
  outline: 2px solid rgba(99,102,241,0.5);  /* accessibilité clavier */
  outline-offset: 2px;
}


