        }

        .cta-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 30px rgba(255,255,255,0.3);
        }

        .cta-secondary {
            background: rgba(255,255,255,0.1);
            color: white;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
