        /* Hero Section */
      .hero {
    background: #ffffff;
    padding: 100px 2rem 2rem;
}

        
      .hero-content {
    padding: 2rem 0;
}


        .cta-primary {
            background: white;
            color: #667eea;
            padding: 1rem 2rem;
            border-radius: 8px;
            text-decoration: none;
            font-weight: 600;
